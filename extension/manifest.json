{
  "manifest_version": 3,
  "name": "Human Browser Bridge",
  "version": "0.1.0",
  "description": "Bridge daemon for controlling your logged-in Chrome tabs.",
  "permissions": [
    "debugger",
    "tabs",
    "storage",
    "activeTab",
    "scripting"
  ],
  "host_permissions": [
    "http://127.0.0.1/*",
    "https://*/*",
    "http://*/*"
  ],
  "background": {
    "service_worker": "background.js",
    "type": "module"
  },
  "action": {
    "default_title": "Human Browser",
    "default_popup": "popup.html"
  }
}
